<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:weightSum="1">
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="60dp" android:orientation="vertical"
		android:weightSum="1" android:layout_weight="0.22">
		<TextView android:text="TextView" android:background="#ffffff"
			android:textColor="#151B8D" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView_edit_title" android:layout_width="fill_parent"
			android:layout_marginBottom="3dp"></TextView>
		<TextView android:text="TextView" android:background="#ffffff"
			android:textColor="#151B8D" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView_edit_date" android:layout_width="fill_parent"
			android:layout_marginBottom="3dp"></TextView>

		<LinearLayout android:orientation="horizontal"
			android:background="#ffffff" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_marginBottom="3dp"
			android:layout_weight="0.30">
			<Button android:id="@+id/button1" android:background="@drawable/globe"
				android:layout_height="match_parent" android:layout_width="26dp"></Button>
			<TextView android:id="@+id/textView_edit_location"
				android:textColor="#151B8D" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="TextView" android:layout_width="match_parent"></TextView>

		</LinearLayout>
		<TextView android:text="TextView" android:background="#ffffff"
			android:textColor="#151B8D" android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView_edit_description" android:layout_width="fill_parent"
			android:layout_height="wrap_content"></TextView>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout1" android:gravity="bottom|center"
		android:background="#ffffff" android:layout_height="143dp"
		android:layout_weight="0.72">
		<Button android:text="Alter" android:background="#151B8D"
			android:textColor="#ffffff" android:id="@+id/btn_alter"
			android:layout_width="100dp" android:layout_height="30dp"></Button>
		<Button android:text="Delete" android:background="#151B8D"
			android:textColor="#ffffff" android:id="@+id/btn_delete"
			android:layout_width="100dp" android:layout_height="30dp"
			android:layout_marginLeft="5dp"></Button>
	</LinearLayout>

</LinearLayout>
