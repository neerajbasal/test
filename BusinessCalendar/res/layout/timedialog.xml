<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:weightSum="1">
	<LinearLayout android:id="@+id/layout_dialog"
		android:layout_height="wrap_content" android:layout_width="match_parent">
		<TimePicker android:id="@+id/timePicker1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TimePicker>

	</LinearLayout>
	<LinearLayout android:id="@+id/layout_dialog_btn"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<Button android:id="@+id/btn_dialog_timeSave"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Save" android:layout_weight="0.5"></Button>
		<Button android:id="@+id/btn_dialog_timeCancel"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Cancel" android:layout_weight="0.5"
			android:layout_marginLeft="5dp"></Button>
	</LinearLayout>

</LinearLayout>
