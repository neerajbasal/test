<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:weightSum="1">
	<LinearLayout android:id="@+id/layout_btn"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<Button android:id="@+id/btn_eventSave" android:layout_width="wrap_content"
			android:layout_height="30dp" android:text="Save"
			android:layout_weight="0.5" android:background="#151B8D"
			android:textColor="#ffffff"></Button>
		<Button android:id="@+id/btn_eventCancel" android:layout_width="wrap_content"
			android:layout_height="30dp" android:text="Cancel"
			android:layout_weight="0.5" android:background="#151B8D"
			android:textColor="#ffffff" android:layout_marginLeft="5dp"></Button>
	</LinearLayout>
	<ScrollView android:layout_marginBottom="50dip" android:id="@+id/ScrollView02"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_weight="0.59">
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="match_parent" android:layout_height="60dp"
			android:orientation="vertical" android:background="#ffffff">
			<LinearLayout android:id="@+id/layout_which_calendar"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:id="@+id/which_calendar" android:text="Calendar:"
					android:textSize="15dp" android:textColor="#151B8D"></TextView>
				<Spinner android:id="@+id/spinner_which_calendar"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:entries="@array/array_name" />
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_title"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:id="@+id/title_text_view" android:text="Title:"
					android:textSize="15dp" android:textColor="#151B8D"></TextView>
				<EditText android:id="@+id/edit_text_what"
					android:layout_height="wrap_content" android:layout_width="match_parent">
					<requestFocus></requestFocus>
				</EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_from_1"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:id="@+id/from_text_view" android:text="From:"
					android:textSize="15dp" android:textColor="#151B8D"></TextView>
				<LinearLayout android:id="@+id/layout_from_2"
					android:layout_width="match_parent" android:layout_height="50dp"
					android:orientation="horizontal">
					<Button android:text="Button" android:id="@+id/btn_from_date"
						android:layout_width="190dp" android:layout_height="wrap_content"></Button>
					<Button android:text="Button" android:id="@+id/btn_from_time"
						android:layout_width="130dp" android:layout_height="wrap_content"></Button>
				</LinearLayout>

			</LinearLayout>

			<LinearLayout android:id="@+id/to_1_layout"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:id="@+id/to_text_view" android:text="To" android:textSize="15dp"
					android:textColor="#151B8D"></TextView>
				<LinearLayout android:id="@+id/to__layout"
					android:layout_width="match_parent" android:layout_height="50dp"
					android:orientation="horizontal">
					<Button android:text="Button" android:id="@+id/btn_to_date"
						android:layout_width="190dp" android:layout_height="wrap_content"></Button>
					<Button android:text="Button" android:id="@+id/btn_to_time"
						android:layout_width="130dp" android:layout_height="wrap_content"></Button>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_allday"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical" android:gravity="right">
				<CheckBox android:id="@+id/check_allday"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="allDay" android:textSize="15dp" android:textColor="#151B8D"></CheckBox>
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_location"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:id="@+id/textView1" android:text="Location:"
					android:textSize="15dp" android:textColor="#151B8D"></TextView>
				<EditText android:id="@+id/edit_text_location"
					android:layout_height="wrap_content" android:layout_width="match_parent">
				</EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_description"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:id="@+id/description_text_view" android:text="Description:"
					android:textSize="15dp" android:textColor="#151B8D"></TextView>
				<EditText android:id="@+id/edit_text_description"
					android:layout_height="wrap_content" android:layout_width="match_parent">
				</EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_reminder"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical" android:gravity="right">
				<CheckBox android:id="@+id/check_reminder"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Reminder" android:textSize="15dp" android:textColor="#151B8D"></CheckBox>
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_show_me"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:id="@+id/show_text_view" android:text="Show me as"
					android:textSize="15dp" android:textColor="#151B8D"></TextView>
				<Spinner android:id="@+id/spinner_show_me"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:entries="@array/showme_name" />
			</LinearLayout>

			<LinearLayout android:id="@+id/layout_privacy"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:id="@+id/privacy_text_view" android:text="Privacy:"
					android:textSize="15dp" android:textColor="#151B8D"></TextView>
				<Spinner android:id="@+id/spinner_privacy"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:entries="@array/privacy_name" />
			</LinearLayout>

		</LinearLayout>
	</ScrollView>

</LinearLayout>
